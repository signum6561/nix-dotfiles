<?xml version="1.0"?>

<labwc_config>
  <desktops number="6" />
  <keyboard>
    <repeatDelay>500</repeatDelay>
    <keybind key="F3">
      <action name="Execute">
        <command>wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+</command>
      </action>
    </keybind>
    <keybind key="F2">
      <action name="Execute">
        <command>wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-</command>
      </action>
    </keybind>
    <keybind key="F1">
      <action name="Execute">
        <command>wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle</command>
      </action>
    </keybind>
    <keybind key="F6">
      <action name="Execute">
        <command>brightnessctl set 10%-</command>
      </action>
    </keybind>
    <keybind key="F7">
      <action name="Execute">
        <command>brightnessctl set +10%</command>
      </action>
    </keybind>
    <keybind key="W-q">
      <action name="Close" />
    </keybind>
    <keybind key="W-w">
      <action name="Iconify" />
    </keybind>
    <keybind key="W-Return">
      <action name="Execute">
        <command>kitty --title "home"</command>
      </action>
    </keybind>
    <keybind key="W-[">
      <action name="ToggleAlwaysOnTop" />
    </keybind>
    <keybind key="W-]">
      <action name="ToggleDecorations" />
    </keybind>
    <keybind key="W-space">
      <action name="Move" />
    </keybind>
    <keybind key="W-r">
      <action name="Resize" />
    </keybind>
    <keybind key="W-a">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="W-k">
      <action name="MoveRelative" y="-50" />
    </keybind>
    <keybind key="W-j">
      <action name="MoveRelative" y="50" />
    </keybind>
    <keybind key="W-h">
      <action name="MoveRelative" x="-50" />
    </keybind>
    <keybind key="W-l">
      <action name="MoveRelative" x="50" />
    </keybind>
    <keybind key="W-S-k">
      <action name="SnapToEdge" direction="up-left" />
    </keybind>
    <keybind key="W-S-j">
      <action name="SnapToEdge" direction="down-right" />
    </keybind>
    <keybind key="W-S-h">
      <action name="SnapToEdge" direction="down-left" />
    </keybind>
    <keybind key="W-S-l">
      <action name="SnapToEdge" direction="up-right" />
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow" />
    </keybind>
    <keybind key="W-S-r">
      <action name="Reconfigure" />
    </keybind>
    <keybind key="W-1">
      <action name="ResizeTo" width="1000" height="600" />
      <action name="AutoPlace" policy="center" />
    </keybind>
    <keybind key="W-2">
      <action name="SnapToEdge" direction="left" />
    </keybind>
    <keybind key="W-3">
      <action name="SnapToEdge" direction="right" />
    </keybind>
    <keybind key="W-s">
      <action name="Execute">
        <command>sc-search</command>
      </action>
    </keybind>
    <keybind key="W-d">
      <action name="Execute">
        <command>wlrctl toplevel minimize state:unminimized</command>
      </action>
    </keybind>
    <keybind key="W-c">
      <action name="Execute">
        <command>sc-calc</command>
      </action>
    </keybind>
    <keybind key="W-S-s">
      <action name="Execute">
        <command>sc-screenshot</command>
      </action>
    </keybind>
    <keybind key="W-i">
      <action name="GoToDesktop" to="1" />
    </keybind>
    <keybind key="W-o">
      <action name="GoToDesktop" to="2" />
    </keybind>
    <keybind key="W-p">
      <action name="GoToDesktop" to="3" />
    </keybind>
    <keybind key="W-8">
      <action name="GoToDesktop" to="4" />
    </keybind>
    <keybind key="W-9">
      <action name="GoToDesktop" to="5" />
    </keybind>
    <keybind key="W-0">
      <action name="GoToDesktop" to="6" />
    </keybind>
    <keybind key="W-S-i">
      <action name="SendToDesktop" to="1" />
    </keybind>
    <keybind key="W-S-o">
      <action name="SendToDesktop" to="2" />
    </keybind>
    <keybind key="W-S-p">
      <action name="SendToDesktop" to="3" />
    </keybind>
    <keybind key="W-S-8">
      <action name="SendToDesktop" to="4" />
    </keybind>
    <keybind key="W-S-9">
      <action name="SendToDesktop" to="5" />
    </keybind>
    <keybind key="W-S-0">
      <action name="SendToDesktop" to="6" />
    </keybind>
  </keyboard>
  <core>
    <decoration>server</decoration>
    <gap>0</gap>
    <adaptiveSync>no</adaptiveSync>
    <allowTearing>no</allowTearing>
    <autoEnableOutputs>yes</autoEnableOutputs>
    <reuseOutputMode>no</reuseOutputMode>
    <xwaylandPersistence>yes</xwaylandPersistence>
  </core>

  <placement>
    <policy>cascade</policy>
  </placement>

  <!-- <font><theme> can be defined without an attribute to set all places -->
  <theme>
    <name>catppuccin-macchiato</name>
    <font name="JetBrainsMono Nerd Font" size="13" />
    <keepBorder>yes</keepBorder>
    <icon>Papirus-Dark</icon>
  </theme>

  <!--
    Just as for window-rules, 'identifier' relates to app_id for native Wayland
    windows and WM_CLASS for XWayland clients.
  -->
  <windowSwitcher show="yes" preview="yes" style="thumbnail" outlines="yes" allWorkspaces="no">
    <fields>
      <field content="type" width="25%" />
      <field content="trimmed_identifier" width="25%" />
      <!-- <field content="identifier" width="25%" /> -->
      <field content="title" width="50%" />
    </fields>
  </windowSwitcher>
  <windowRules>
    <windowRule identifier="kitty" title="home">
      <action name="ResizeTo" width="1000" height="400" />
      <action name="MoveToEdge" direction="down" snapWindows="no" />
    </windowRule>
    <windowRule identifier="*" serverDecoration="no" />
  </windowRules>

  <!-- edge strength is in pixels -->
  <resistance>
    <screenEdgeStrength>20</screenEdgeStrength>
    <windowEdgeStrength>20</windowEdgeStrength>
    <!-- resistance for maximized/tiled windows -->
    <unSnapThreshold>20</unSnapThreshold>
    <!-- resistance for vertically/horizontally maximized windows -->
    <unMaximizeThreshold>150</unMaximizeThreshold>
  </resistance>

  <resize>
    <!-- Show a simple resize and move indicator -->
    <popupShow>Never</popupShow>
    <!-- Let client redraw its contents while resizing -->
    <drawContents>yes</drawContents>
    <!-- Borders are effectively 8 pixels wide regardless of visual appearance -->
    <minimumArea>8</minimumArea>

    <!--
      Set cornerRange to a positive value to increase the size of corner
      regions for mouse actions and diagonal window resizing. When omitted,
      the default size of the corner region is half of the titlebar height.

      <cornerRange>8</cornerRange>
    -->
  </resize>

  <focus>
    <followMouse>no</followMouse>
    <followMouseRequiresMovement>yes</followMouseRequiresMovement>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <snapping>
    <!-- Set range to 0 to disable window snapping completely -->
    <range>1</range>
    <overlay enabled="yes">
      <delay inner="500" outer="500" />
    </overlay>
    <topMaximize>yes</topMaximize>
    <notifyClient>always</notifyClient>
  </snapping>
  <desktops>
    <popupTime>1000</popupTime>
    <names>
      <name>I</name>
      <name>O</name>
      <name>P</name>
      <name>8</name>
      <name>9</name>
      <name>0</name>
    </names>
  </desktops>
  <touch deviceName="" mapToOutput="" mouseEmulation="no" />
  <tablet mapToOutput="" rotate="0" mouseEmulation="no">
    <!-- Active area dimensions are in mm -->
    <area top="0.0" left="0.0" width="0.0" height="0.0" />
    <map button="Tip" to="Left" />
    <map button="Stylus" to="Right" />
    <map button="Stylus2" to="Middle" />
  </tablet>
  <tabletTool motion="absolute" relativeMotionSensitivity="1.0" />
  <libinput>
    <device category="default">
      <naturalScroll></naturalScroll>
      <leftHanded></leftHanded>
      <pointerSpeed>1</pointerSpeed>
      <accelProfile></accelProfile>
      <tap>yes</tap>
      <tapButtonMap></tapButtonMap>
      <tapAndDrag></tapAndDrag>
      <dragLock></dragLock>
      <middleEmulation></middleEmulation>
      <disableWhileTyping></disableWhileTyping>
      <clickMethod></clickMethod>
      <sendEventsMode></sendEventsMode>
      <calibrationMatrix></calibrationMatrix>
      <scrollFactor>1.0</scrollFactor>
    </device>
  </libinput>

  <menu>
    <ignoreButtonReleasePeriod>250</ignoreButtonReleasePeriod>
    <showIcons>yes</showIcons>
  </menu>

  <magnifier>
    <width>400</width>
    <height>400</height>
    <initScale>2.0</initScale>
    <increment>0.2</increment>
    <useFilter>true</useFilter>
  </magnifier>

</labwc_config>

